% このコード中で |#1| は渡されたオプション列のテキストに置換される。
%    \begin{macrocode}
\@onlypreamble\bxjs@set@dupload@proc
\def\bxjs@set@dupload@proc#1{%
  \expandafter\bxjs@set@dupload@proc@a\csname bxjs@dlp/#1\endcsname}
