  \ifx\bxjs@tmpa\bxjs@tmpb
    \expandafter\ifx\csname bxjs@dlp/#2.#1\endcsname\relax\else
      \bxjs@dlptrue \fi
  \fi
  \ifbxjs@dlp \expandafter\bxjs@do@dupload@proc
  \else \expandafter\bxjs@org@if@ptions
  \fi {#1}{#2}{#3}}
